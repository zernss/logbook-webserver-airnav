<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/css/styles.css">
  <title>Localizer Mopiens</title>
  <style>
    .hidden {
      display: none;
    }
    .sub-buttons {
      margin-left: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="sidebar">
      <button id="userButton">User</button>
      <button id="logbookButton">Logbook</button>
      <button id="mopiensButton">Mopiens</button>
      <div id="mopiensSubButtons" class="hidden sub-buttons">
        <button id="localizerButton">Localizer</button>
        <button id="glidePathButton">Glide Path</button>
        <button id="middleMarkerButton">Middle Marker</button>
      </div>
      <button id="selexButton">Selex</button>
      <button id="downloadButton">Download</button>
      <button id="logoutButton">Logout</button>
    </div>
    <div class="main-content" id="mainContent">
      <div id="logbookPage">
        <form action="/submit" method="POST">
          <label for="date">Date:</label>
          <input type="datetime-local" id="date" name="date" required><br>
          <label for="tx1">TX1:</label>
          <select id="tx1" name="tx1" required>
            <option value="ON">ON</option>
            <option value="ON LOAD">ON LOAD</option>
            <option value="ON ANTENNA">ON ANTENNA</option>
            <option value="OFF">OFF</option>
          </select><br>
          <label for="tx2">TX2:</label>
          <select id="tx2" name="tx2" required>
            <option value="ON">ON</option>
            <option value="ON LOAD">ON LOAD</option>
            <option value="ON ANTENNA">ON ANTENNA</option>
            <option value="OFF">OFF</option>
          </select><br>
          <label for="battery1">Battery 1:</label>
          <input type="number" step="0.01" id="battery1" name="battery1" required><br>
          <label for="battery2">Battery 2:</label>
          <input type="number" step="0.01" id="battery2" name="battery2" required><br>
          <label for="temp">Temp:</label>
          <input type="number" step="0.01" id="temp" name="temp" required><br>
          <label for="technician">Technician:</label>
          <input type="text" id="technician" name="technician" required><br>
          <label for="note">Additional Note:</label>
          <textarea id="note" name="note"></textarea><br>
          <button type="submit">Submit</button>
        </form>
        <table>
          <thead>
            <tr>
              <th>Date</th>
              <th>TX1</th>
              <th>TX2</th>
              <th>Battery 1</th>
              <th>Battery 2</th>
              <th>Temp</th>
              <th>Technician</th>
              <th>Note</th>
            </tr>
          </thead>
          <tbody>
            <% logs.forEach(log => { %>
              <tr>
                <td><%= log.date %></td>
                <td><%= log.tx1 %></td>
                <td><%= log.tx2 %></td>
                <td><%= log.battery1 %></td>
                <td><%= log.battery2 %></td>
                <td><%= log.temp %></td>
                <td><%= log.technician %></td>
                <td><%= log.note %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <script>
    document.getElementById('mopiensButton').addEventListener('click', function() {
      var subButtons = document.getElementById('mopiensSubButtons');
      if (subButtons.classList.contains('hidden')) {
        subButtons.classList.remove('hidden');
      } else {
        subButtons.classList.add('hidden');
      }
    });

    document.getElementById('localizerButton').addEventListener('click', function() {
      showPage('logbookPage');
    });

    function showPage(pageId) {
      var pages = document.querySelectorAll('.main-content > div');
      pages.forEach(function(page) {
        page.style.display = 'none';
      });
      document.getElementById(pageId).style.display = 'block';
    }

    // Initialize to show the logbook page by default
    showPage('logbookPage');
  </script>
</body>
</html>
